{
  "trailingComma": "none",
  "tabWidth": 4,
  "printWidth": 150,
  "overrides": [
      {
          "files": "**/lwc/**/*.html",
          "options": {
              "tabWidth": 4,
              "parser": "lwc"
          }
      },
      {
          "files": "**/*.{cls,trigger,apex}",
          "options": {
              "apexInsertFinalNewline": true,
              "printWidth": 150,
              "tabWidth": 4
          }
      },
      {
          "files": "*.{cmp,page,component}",
          "options": {
              "parser": "html",
              "tabWidth": 4
          }
      }
  ]
}

